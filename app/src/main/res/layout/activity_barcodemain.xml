<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.nordicsemi.nrfUARTv2.barcodemain"
    android:orientation="vertical"
    android:id="@+id/rl">

    <com.nordicsemi.nrfUARTv2.circularbuttom.CircularProgressButton
        android:id="@+id/scan_barcode_button"
        android:layout_width="215dp"
        android:layout_height="215dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:textColor="@color/cpb_white"
        android:textSize="40sp"
        app:cpb_cornerRadius="148dp"
        app:cpb_iconError="@drawable/ic_action_cancel"
        app:cpb_textIdle="Punch"
        app:cpb_textProgress="Processing"></com.nordicsemi.nrfUARTv2.circularbuttom.CircularProgressButton>


    <TextView
        android:id="@+id/result_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/scan_barcode_button"
        android:layout_marginTop="23dp"
        android:freezesText="true"
        android:gravity="center"
        android:text="Your Scan Result will be here"
        android:textSize="22sp" />


</RelativeLayout>
