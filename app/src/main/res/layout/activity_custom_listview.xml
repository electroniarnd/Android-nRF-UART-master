<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivProduct"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerInside"
        android:src="@mipmap/camera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="182dp"
        android:layout_height="wrap_content"

        android:layout_marginEnd="8dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:padding="2dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/color_4062BB"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivProduct"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/ib_addnew"
        android:layout_width="50dp"
        android:layout_height="46dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        android:adjustViewBounds="true"
        android:background="#00ffffff"
        android:cropToPadding="false"
        android:scaleType="centerInside"
        android:src="@drawable/project"
        app:layout_constraintStart_toEndOf="@+id/ivProduct"
        app:layout_constraintTop_toBottomOf="@+id/tvProductName" />


    <ImageButton
        android:id="@+id/ib_remove"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="6dp"
        android:background="#00ffffff"
        android:scaleType="centerInside"
        android:src="@drawable/livelocation"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProductName" />

    <ImageButton
        android:id="@+id/imglive"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"

        android:background="#00ffffff"
        android:scaleType="centerInside"
        android:src="@drawable/history"
        app:layout_constraintEnd_toStartOf="@+id/ib_remove"
        app:layout_constraintStart_toEndOf="@+id/ib_addnew"
        app:layout_constraintTop_toBottomOf="@+id/tvProductName" />


</android.support.constraint.ConstraintLayout>